<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimension_ten_dp"
    android:layout_marginLeft="@dimen/dimension_ten_dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">
            <ImageView
                android:id="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/meinv" />
            <ImageView
                android:id="@+id/image_layout_small"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimension_sixty_dp"
                android:src="@mipmap/get_code_button" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:textSize="@dimen/dimension_ten_dp"
                    android:id="@+id/text_layout_no1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dimension_fifteen_dp"
                    android:gravity="center"
                    android:text="鎴戠埍鏈辫尩" />
                <TextView
                    android:textSize="@dimen/dimension_ten_dp"
                    android:gravity="center"
                    android:id="@+id/text_layout_no2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="姣忔婊戝姩鐨勬椂鍊欑敓鎴愮殑缁勪欢" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

